<nav>
  <a href="/{{current.username}}">Home | </a>
  <a href="/fullusers">All Users</a>
</nav>
<span class="center"><h2>You are viewing {{user.username}}'s profile</h2></span>

<br><br>

<ul>
{{#each user.favMovies}}
<div class="movie">
  <h3 class="cat">Title: </h3><li>{{title}}</li><br>
  <a href="http://www.imdb.com/title/{{imdbId}}"><img src="{{poster}}" alt="Poster for {{title}}" /></a>
  <h4 class="cat">Year: </h4><li>{{year}}</li><br>
  <h4 class="cat">Genre: </h4><li>{{genre}}</li><br>
  <h4 class="cat">Actors: </h4><li>{{actors}}</li><br>
  <h4 class="cat">Summary: </h4><li>{{summary}}</li><br>
</div>
{{/each}}
</ul>
